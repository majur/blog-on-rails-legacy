<p id="notice"><%= notice %></p>

<h1 style=”color:blue;” >Pages</h1>

<table>
  <thead>
    <tr>
      <th style=”color:blue” >Title</th>
      <th style=”color:blue” >Sort</th>
      <th style=”color:blue” >Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.order(sort: :asc).each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.sort %></td>
        <td><%= page.active %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

