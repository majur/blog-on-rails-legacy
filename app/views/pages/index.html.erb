<p id="notice"><%= notice %></p>
<% if logged_in? %>
<h1>Pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Sort</th>
      <th>Active</th>
      <th>Posts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.order(sort: :asc).each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.sort %></td>
        <td><%= page.active %></td>
        <td><%= page.posts %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path %>
<% else %>
<%#  TODO: redirect to 404 %>
<% end %>
