<% provide(:title, "Log in") %>

<% if logged_in? %>
  <h1>You are logged in</h1>
  <p><%= current_user.name %></p>

<% else %>
  <h1>Log in</h1>
  <div>
    <div>
      <%= form_with(url: signup_path, scope: :session, local: true) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Log in" %>
      <% end %>

      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
<% end %>
